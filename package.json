{
	"name": "@cassidydc/eslint-plugin-wordpress",
	"version": "1.0.2",
	"description": "ESLint plugin for using a modern flat config in WordPress development.",
	"author": "Jacob Cassidy",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"eslint",
		"gutenberg",
		"plugin",
		"wordpress"
	],
	"homepage": "https://cassidydc.com",
	"repository": {
		"type": "git",
		"url": "https://github.com/cassidydc/eslint-plugin-wordpress"
	},
	"bugs": {
		"url": "https://github.com/cassidydc/eslint-plugin-wordpress/issues"
	},
	"files": [
		"configs",
		"rules",
		"utils",
		"index.js",
		"plugin.js"
	],
	"main": "index.js",
	"dependencies": {
		"@babel/core": "^7.28.0",
		"@babel/eslint-parser": "^7.28.0",
		"@wordpress/babel-preset-default": "^8.27.0",
		"@wordpress/prettier-config": "^4.27.0",
		"cosmiconfig": "^9.0.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsdoc": "^52.0.2",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-prettier": "^5.5.3",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"globals": "^16.3.0",
		"requireindex": "^1.2.0",
		"typescript-eslint": "^8.39.0"
	},
	"devDependencies": {
		"jest": "^30.0.5",
		"markdownlint-cli2": "^0.18.1",
		"prettier": "npm:wp-prettier@^3.0.3"
	},
	"peerDependencies": {
		"@eslint/js": ">=9",
		"prettier": ">=3",
		"typescript": ">=5"
	},
	"peerDependenciesMeta": {
		"prettier": {
			"optional": true
		},
		"typescript": {
			"optional": true
		}
	},
	"overrides": {
		"@cassidydc/eslint-plugin-wordpress": {
			"@wordpress/babel-preset-default": {
				"@babel/runtime": "^7.28.2"
			}
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"format": "npx prettier --write",
		"lint:js": "npx eslint --no-warn-ignored",
		"lint:js:fix": "npx eslint --no-warn-ignored --fix",
		"lint:md": "npx markdownlint-cli2 \"**/*.md\"",
		"lint:md:fix": "npx markdownlint-cli2 \"**/*.md\" --fix",
		"test": "jest",
		"test:ref": "jest ./rules/__tests__"
	}
}
