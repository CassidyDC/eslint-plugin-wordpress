{
	"name": "@cassidydc/eslint-plugin-wordpress",
	"version": "1.1.2",
	"description": "ESLint plugin for using a modern flat config in WordPress development.",
	"author": "Jacob Cassidy",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"eslint",
		"gutenberg",
		"plugin",
		"wordpress"
	],
	"homepage": "https://github.com/CassidyDC/eslint-plugin-wordpress/blob/main/README.md",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cassidydc/eslint-plugin-wordpress.git"
	},
	"bugs": {
		"url": "https://github.com/cassidydc/eslint-plugin-wordpress/issues"
	},
	"files": [
		"configs",
		"patches",
		"rules/",
		"!rules/__tests__",
		"utils",
		"CHANGELOG.md",
		"index.js",
		"index.d.ts",
		"plugin.js",
		"README.md"
	],
	"main": "index.js",
	"types": "index.d.ts",
	"dependencies": {
		"@babel/eslint-parser": "^7.28.0",
		"@wordpress/babel-preset-default": "^8.28.0",
		"@wordpress/prettier-config": "^4.28.0",
		"cosmiconfig": "^9.0.0",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-import-x": "^4.16.1",
		"eslint-plugin-jest": "^29.0.1",
		"eslint-plugin-jsdoc": "^54.0.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-playwright": "^2.2.2",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"globals": "^16.3.0",
		"requireindex": "^1.2.0",
		"typescript-eslint": "^8.39.1"
	},
	"devDependencies": {
		"jest": "^30.0.5",
		"markdownlint-cli2": "^0.18.1",
		"prettier": "npm:wp-prettier@^3.0.3"
	},
	"overrides": {
		"@wordpress/babel-preset-default": {
			"@babel/runtime": "^7.28.2"
		}
	},
	"peerDependencies": {
		"@eslint/js": ">=9",
		"prettier": ">=3",
		"typescript": ">=5"
	},
	"peerDependenciesMeta": {
		"prettier": {
			"optional": true
		},
		"typescript": {
			"optional": true
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"format": "npx prettier . --write",
		"lint:docs": "npx markdownlint-cli2 \"**/*.md\"",
		"lint:docs:fix": "npx markdownlint-cli2 \"**/*.md\" --fix",
		"lint:scripts": "npx eslint",
		"lint:scripts:fix": "npx eslint --fix",
		"test": "node --experimental-vm-modules node_modules/.bin/jest",
		"test:ref": "node --experimental-vm-modules node_modules/.bin/jest ./rules/__tests__"
	}
}
